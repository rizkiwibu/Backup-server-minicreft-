{
  "format_version": "1.13.0",
  "minecraft:entity": {
    "description": {
      "identifier": "npc:npc_villagers",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },
	"component_groups":{
		"despawn":{
		"minecraft:instant_despawn":{}
		},
		"move":{
		 "minecraft:movement": {
        "value": 0.15
      }
		},
		"stop":{
		 "minecraft:movement": {
        "value": 0
      }
		}
		
	},

    "components": {
	"minecraft:behavior.move_towards_target":{
		"within_radius": 3
	  },
	"minecraft:attack": {
        "damage": 0
      },
	  "minecraft:health": {
        "value": 20,
        "max": 30
      },
	"minecraft:behavior.nearest_attackable_target": {
        "priority": 2,
        "must_see": false,
        "reselect_targets": true,
        "within_radius": 10,
        "entity_types": [
          {
            "filters": {
              "any_of": [
                { "test": "is_family", "subject": "other", "value": "follow" }
              ]
            },
            "max_dist": 11
          }
        ]
      },
	   "minecraft:behavior.melee_attack": {
        "priority": 0,
		"reach_multiplier": 5,
		"attack_duration": 1,
        "speed_multiplier": 1.5,
        "track_target": true
      },
	  "minecraft:navigation.generic": {
		   "can_path_over_water": true,
        "is_amphibious": true,
        "can_pass_doors": true,
		"can_swim": true,
        "can_break_doors": false,
        "avoid_portals": true
      },
	   "minecraft:jump.static":{
	  },
	  "minecraft:movement.basic": {
      },
	  "minecraft:can_climb": {
      },
	  "minecraft:behavior.float": {
        "priority": 0
      },
	  "minecraft:environment_sensor": {
        "triggers": [
		{
          "filters": {
            "any_of": [{"test": "has_tag","value":"move"}]
          },
          "event": "move"
		},
		{
          "filters": {
            "any_of": [{"test": "has_tag","operator":"!=","value":"move"}]
          },
          "event": "stop"
		}
		]
	},
	  "minecraft:conditional_bandwidth_optimization": {
      },
		"minecraft:interact":{
	"interactions":[	
			{
	"on_interact":{
		"filters" : {
			"any_of":[
			{
			"test": "has_equipment","domain":"hand","subject": "other","value": "barrier"
			},
			{
			"test": "has_equipment","domain":"hand","subject": "other","value": ""
			}
		]
		},
		"event": "despawn",
		"target": "self"
	},
		"use_item":false,
		"interact_text": "Remove NPC"
		}
	]
	},
      "minecraft:damage_sensor": {
        "triggers": {
          "cause": "all",
          "deals_damage": false
        }
      },
      "minecraft:type_family": {
        "family": [ "npc", "mob" ]
      },
      "minecraft:fire_immune": true,
      "minecraft:movement": {
        "value": 0.5
      },
      "minecraft:loot": {
        "table": "loot_tables/empty.json"
      },
      "minecraft:collision_box": {
        "width": 0.6,
        "height": 1.9
      },
      "minecraft:behavior.look_at_player": {
        "priority": 0,
        "look_distance": 6.0,
        "probability": 0.02
      },
      "minecraft:persistent": {
      },
      "minecraft:npc": {
        "npc_data": {
          "portrait_offsets": {
            "translate": [-7, 50, 0],
            "scale": [1.75, 1.75, 1.75]
          },
          "picker_offsets": {
            "translate": [0, 20, 0],
            "scale": [1.7, 1.7, 1.7]
          },
          "skin_list":[
            {
				"variant": 0
            },
			{
				"variant": 1
			},
			{
				"variant": 2
			},
			{
				"variant": 3
			},
			{
				"variant": 4
			},
			{
				"variant": 5
			},
			{
				"variant": 6
			}
          ]
        }
      },
      "minecraft:nameable": {
        "always_show": true,
        "allow_name_tag_renaming": false
      },
      "minecraft:physics": {
      }
    },
	"events":{
		"despawn":{
		"add":{"component_groups":["despawn"]}
		},
		"move":{
		"add":{"component_groups":["move"]},
		"remove":{"component_groups":["stop"]}
		},
		"stop":{
		"remove":{"component_groups":["move"]},
		"add":{"component_groups":["stop"]}
		}
	}
  }
}
